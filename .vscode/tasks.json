{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Template Parser: Process All Files",
      "type": "shell",
      "command": "node",
      "args": [
        "tmpl.js",
        "**/*.{c,h,cpp,hpp,js,ts,txt}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
